<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/lightgray">

    <ImageView
        android:id="@+id/settingsbtn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/menu"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="55dp"
        android:clickable="true"
        android:focusable="true"/>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:src="@drawable/aniwhere_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />

    <ImageButton
        android:id="@+id/search"
        android:layout_width="30dp"
        android:layout_height="27dp"
        android:src="@drawable/search"
        android:layout_centerHorizontal="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="55dp"
        android:layout_marginRight="24dp" />

    <LinearLayout
        android:id="@+id/category_layout"
        android:layout_centerHorizontal="true"
        android:layout_width="380dp"
        android:layout_height="140dp"
        android:orientation="horizontal"
        android:layout_below="@id/logo"
        android:gravity="center"
        android:layout_marginTop="20dp">

    <LinearLayout
        android:id="@+id/lostandfound"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/lostandfound"
            app:shapeAppearanceOverlay="@style/CircleImageViewStyle"
            android:scaleType="centerCrop"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Lost and Found"
            android:layout_gravity="center"
            android:fontFamily="@font/lexenddecabold"
            android:textSize="12dp"/>
    </LinearLayout>

        <LinearLayout
            android:id="@+id/locator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/locator"
                app:shapeAppearanceOverlay="@style/CircleImageViewStyle"
                android:scaleType="centerCrop"
                android:layout_gravity="center" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Locator"
                android:layout_gravity="center"
                android:fontFamily="@font/lexenddecabold"
                android:textSize="15dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/adoption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/adoption"
                app:shapeAppearanceOverlay="@style/CircleImageViewStyle"
                android:scaleType="centerCrop"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adoption"
                android:layout_gravity="center"
                android:fontFamily="@font/lexenddecabold"
                android:textSize="15dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/charities"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/charities"
                app:shapeAppearanceOverlay="@style/CircleImageViewStyle"
                android:scaleType="centerCrop"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Charities"
                android:fontFamily="@font/lexenddecabold"
                android:textSize="15dp"
                android:layout_gravity="center"/>
        </LinearLayout>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/postLayout"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/category_layout"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:id="@+id/addbtn"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:backgroundTint="@color/matcha"
        style="@style/Widget.MyApp.FloatingActionButton.Rounded"
        android:src="@drawable/baseline_add_24"
        android:layout_margin="24dp" />
</RelativeLayout>