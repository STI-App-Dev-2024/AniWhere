<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/lightgray">

    <ImageButton
        android:id="@+id/backbtn"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/arrow"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="55dp" />

    <ImageView
        android:id="@+id/aniwhere_logo"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:src="@drawable/aniwhere_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/lightgray"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/aniwhere_logo"
        android:paddingLeft="24dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Account"
            android:fontFamily="@font/cormorantbold"
            android:textSize="32dp"/>
        <LinearLayout
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="horizontal">
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/profile_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/aniwhere_logo"
                app:shapeAppearanceOverlay="@style/CircleImageViewStyle"
                android:layout_gravity="center"
                android:scaleType="centerCrop"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="10dp">
                    <TextView
                        android:id="@+id/firstname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="name"
                        android:fontFamily="@font/cormorantbold"
                        android:textSize="25dp"/>
                    <TextView
                        android:id="@+id/username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="name"
                        android:fontFamily="@font/cormorantregular"
                        android:textSize="20dp"/>
                </LinearLayout>

            <ImageView
                android:id="@+id/profile_editbtn"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="180dp"
                android:src="@drawable/rightarrow"
                android:layout_gravity="center"
                android:clickable="true"
                android:focusable="true"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:fontFamily="@font/cormorantbold"
            android:textSize="32dp"
            android:layout_marginTop="30dp"/>

    <LinearLayout
        android:id="@+id/notifbtn"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="horizontal"
        android:clickable="true"
        android:focusable="true">
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/notificaiton"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notification"
            android:fontFamily="@font/LexendDecaSemiBold"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:paddingLeft="15dp"/>
    </LinearLayout>

        <LinearLayout
            android:id="@+id/helpbtn"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="horizontal"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/help"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Help"
                android:fontFamily="@font/LexendDecaSemiBold"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:paddingLeft="15dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/feedbackbtn"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="horizontal"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/feedback"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Feedback"
                android:fontFamily="@font/LexendDecaSemiBold"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:paddingLeft="15dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/logoutbtn"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/logout"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Log out"
                android:fontFamily="@font/LexendDecaSemiBold"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:paddingLeft="15dp"/>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>