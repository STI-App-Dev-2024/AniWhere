<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">


    <ImageView
        android:id="@+id/left_arrow"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/arrow"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp" />


    <ImageView
        android:id="@+id/right_logo"
        android:layout_width="110dp"
        android:layout_height="90dp"
        android:src="@drawable/aniwhere_logo"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        />

    <LinearLayout
        android:id="@+id/signuplayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/right_logo"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">
    <TextView
        android:id="@+id/signup_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cormorant_bold"
        android:text="Sign up"
        android:textSize="36sp" />


    <TextView
        android:id="@+id/first_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="First Name"
        android:fontFamily="@font/cormorantregular"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/firstname"
        android:layout_width="307dp"
        android:layout_height="50sp"
        android:background="@drawable/emailsize"
        android:fontFamily="@font/cormorantlight"
        android:hint="your first name"
        android:inputType="textPersonName"
        android:padding="12dp"
        android:textColorHint="@color/white" />


    <TextView
        android:id="@+id/last_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/firstname"
        android:text="Last Name"
        android:fontFamily="@font/cormorantregular"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/lastname"
        android:layout_width="307dp"
        android:layout_height="50sp"
        android:background="@drawable/emailsize"
        android:fontFamily="@font/cormorantlight"
        android:hint="your last name"
        android:inputType="textPersonName"
        android:padding="12dp"
        android:textColorHint="@color/white" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:fontFamily="@font/cormorantregular"
            android:textSize="16dp"
            />
        <EditText
            android:id="@+id/username"
            android:layout_width="307dp"
            android:layout_height="50sp"
            android:hint="your username"
            android:inputType="textPersonName"
            android:padding="12dp"
            android:background="@drawable/emailsize"
            android:textColorHint="@color/white"
            android:fontFamily="@font/cormorantlight"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:fontFamily="@font/cormorantregular"
            android:textSize="16dp"
            />

        <EditText
            android:id="@+id/email"
            android:layout_width="307dp"
            android:layout_height="50sp"
            android:background="@drawable/emailsize"
            android:fontFamily="@font/cormorantlight"
            android:hint="example@example.com"
            android:inputType="textPersonName"
            android:padding="12dp"
            android:textColorHint="@color/white" />

        <TextView
        android:id="@+id/password_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:fontFamily="@font/cormorantregular"
        android:textSize="16sp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/enterpassword"
        android:layout_width="307dp"
        android:layout_height="wrap_content"
        app:passwordToggleEnabled="true"
        android:textColorHint="@color/white">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:hint="enter your password"
            android:inputType="textPassword"
            android:fontFamily="@font/cormorantlight"
            android:background="@drawable/emailsize" />
    </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/confirmpassword"
            android:layout_width="307dp"
            android:layout_height="wrap_content"
            app:passwordToggleEnabled="true"
            android:textColorHint="@color/white">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:hint="confirm password"
                android:inputType="textPassword"
                android:fontFamily="@font/cormorantlight"
                android:background="@drawable/emailsize" />
        </com.google.android.material.textfield.TextInputLayout>
</LinearLayout>

    <CheckBox
        android:id="@+id/terms_checkbox"
        android:layout_width="317dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/signuplayout"
android:layout_centerHorizontal="true"
        android:text="@string/termsandcondition"
        android:textSize="13sp"
        android:fontFamily="@font/crimsonprobold"
        android:textColor="@color/brown" />

    <!-- Sign Up Button -->
    <Button
        android:id="@+id/signup_button"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_below="@id/terms_checkbox"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Sign up"
        android:background="@drawable/loginbutton"
        android:textSize="24sp"
        android:fontFamily="@font/cormorant_bold"
        android:drawableRight="@drawable/paw"
        android:drawableLeft="@drawable/paw"/>

    <!-- Footer Text with Login Link -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/signup_button"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account?"
            android:textSize="15sp"
            android:fontFamily="@font/crimsonprobold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log in"
            android:textSize="15sp"
            android:fontFamily="@font/crimsonprobold"
            android:textColor="@color/brown"
            android:layout_marginStart="8dp" />
    </LinearLayout>

</RelativeLayout>
