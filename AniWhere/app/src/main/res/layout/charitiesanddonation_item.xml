<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/charities"
            app:shapeAppearanceOverlay="@style/CircleImageViewStyle"
            android:scaleType="centerCrop"
            android:layout_margin="10dp"
            android:id="@+id/profile_image"/>
        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="name"
                android:fontFamily="@font/cormorant_bold"
                android:textSize="20dp"
                android:id="@+id/name"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="name"
                android:fontFamily="@font/cormorantregular"
                android:textSize="16dp"
                android:id="@+id/username"/>

        </LinearLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:text="Donate"
            android:textColor="@color/black"
            android:drawableLeft="@drawable/paw2"
            />
    </LinearLayout>
        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Due to unforeseen changes in my life circumstances, such as a demanding work schedule and relocation, I can no longer provide Bruce with the time, attention, and care he truly deserves. It's a difficult decision, but I believe finding Bruce a loving home where he can receive the affection and care he needs is in his best interest. I want to ensure Bruce is in an environment where he can thrive and be happy."/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        >
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="180dp"
            android:layout_height="149dp"
            android:src="@drawable/charities"
            android:scaleType="fitXY"
            app:shapeAppearance="@style/RoundEdgesImageview"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:paddingRight="2dp"
            android:id="@+id/image1"
            />
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="180dp"
            android:layout_height="149dp"
            android:src="@drawable/charities"
            android:scaleType="fitXY"
            app:shapeAppearance="@style/RoundEdgesImageview"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:paddingLeft="2dp"
            android:id="@+id/image2"
            />
    </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_height="5dp"/>
    <LinearLayout
        android:layout_width="65dp"
        android:layout_height="15dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/paw_like"
            android:layout_width="16dp"
            android:layout_height="15dp"
            android:src="@drawable/paw_like"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/comment_box"
            android:layout_width="16dp"
            android:layout_height="15dp"
            android:src="@drawable/commentbox"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/share_icon"
            android:layout_width="16dp"
            android:layout_height="15dp"
            android:src="@drawable/shareicon"
            android:layout_weight="1"/>
    </LinearLayout>
    </LinearLayout>
</RelativeLayout>