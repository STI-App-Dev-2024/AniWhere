<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightgray">

    <ImageButton
        android:id="@+id/backbtn"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/arrow"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="55dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@id/commentEditText"
        android:id="@+id/photoRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/addPhotosButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/photoRecyclerView"
        android:text="Add Photos"
        android:fontFamily="@font/cormorantregular"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:drawableLeft="@drawable/addphotos"
        style="?android:buttonBarButtonStyle"/>

    <EditText
        android:id="@+id/commentEditText"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_below="@id/backbtn"
        android:layout_marginTop="20dp"
        android:textSize="16sp"
        android:hint="Write a comment..." />

    <Button
        android:layout_width="123dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:text="POST"
        android:layout_marginBottom="25dp"
        android:backgroundTint="@color/dirtygreen"/>
</RelativeLayout>